<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:pageModels="clr-namespace:NotesCommander.PageModels"
             xmlns:models="clr-namespace:NotesCommander.Models"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="NotesCommander.Pages.MainPage"
             x:DataType="pageModels:MainPageModel"
             x:Name="OverviewPage"
             Title="Голосовые заметки">

    <ContentPage.Behaviors>
        <toolkit:EventToCommandBehavior
                BindingContext="{Binding Path=BindingContext, Source={x:Reference OverviewPage}, x:DataType=ContentPage}"
                EventName="NavigatedTo"
                Command="{Binding NavigatedToCommand}" />
        <toolkit:EventToCommandBehavior
                BindingContext="{Binding Path=BindingContext, Source={x:Reference OverviewPage}, x:DataType=ContentPage}"
                EventName="NavigatedFrom"
                Command="{Binding NavigatedFromCommand}" />
        <toolkit:EventToCommandBehavior
                BindingContext="{Binding Path=BindingContext, Source={x:Reference OverviewPage}, x:DataType=ContentPage}"
                EventName="Loaded"
                Command="{Binding AppearingCommand}" />
    </ContentPage.Behaviors>

    <ContentPage.Resources>
        <ResourceDictionary>
            <toolkit:InvertedBoolConverter x:Key="InvertedBoolConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid RowDefinitions="Auto,*">
        <VerticalStackLayout Grid.Row="0" Padding="12" BackgroundColor="LightYellow">
            <Label Text="=== ОТЛАДКА ===" FontSize="14" TextColor="Red" FontAttributes="Bold" />
            <Label Text="{Binding GroupedVoiceNotes.Count, StringFormat='GroupedVoiceNotes.Count={0}'}" FontSize="12" TextColor="Black" />
        </VerticalStackLayout>

        <Grid Grid.Row="1">
            <CollectionView ItemsSource="{Binding GroupedVoiceNotes}"
                            IsGrouped="True"
                            SelectionMode="None"
                            Margin="12,0,12,12">
                <CollectionView.Header>
                    <VerticalStackLayout Spacing="8" Margin="0,0,0,12">
                        <Label Text="Примеры заметок (диагностика привязок)"
                               FontAttributes="Bold"
                               TextColor="Gray" />

                        <VerticalStackLayout Spacing="8"
                                             BindableLayout.ItemsSource="{Binding DebugVoiceNotes}">
                            <BindableLayout.ItemTemplate>
                                <DataTemplate x:DataType="models:VoiceNote">
                                    <Border BackgroundColor="#FFFFFF"
                                            Stroke="#DDDDDD"
                                            StrokeThickness="1"
                                            Padding="12"
                                            Margin="0,0,0,8">
                                        <VerticalStackLayout>
                                            <Label Text="{Binding Title}"
                                                   FontAttributes="Bold"
                                                   FontSize="16" />
                                            <Label Text="{Binding DurationDisplay, StringFormat='Длительность: {0}'}"
                                                   FontSize="12" />
                                            <Label Text="{Binding RecognitionStatusDisplay, StringFormat='Статус: {0}'}"
                                                   FontSize="12" />
                                            <Label Text="{Binding AudioFilePath, StringFormat='Audio: {0}'}"
                                                   FontSize="10" />
                                            <Button Text="▶ Воспроизвести"
                                                    Command="{Binding Path=BindingContext.PlayAudioCommand, Source={x:Reference OverviewPage}}"
                                                    CommandParameter="{Binding .}"
                                                    BackgroundColor="#4CAF50"
                                                    TextColor="White"
                                                    Margin="0,6,0,0" />
                                        </VerticalStackLayout>
                                    </Border>
                                </DataTemplate>
                            </BindableLayout.ItemTemplate>
                        </VerticalStackLayout>
                    </VerticalStackLayout>
                </CollectionView.Header>

                <CollectionView.GroupHeaderTemplate>
                    <DataTemplate x:DataType="models:VoiceNoteGroup">
                        <Border BackgroundColor="LightBlue" Padding="8" Margin="0,0,0,6">
                            <VerticalStackLayout>
                                <Label Text="{Binding DateGroupDisplay}"
                                       FontAttributes="Bold"
                                       FontSize="16"
                                       TextColor="Blue" />
                                <Label Text="{Binding Count, StringFormat='Items in group: {0}'}"
                                       FontSize="12"
                                       TextColor="Green" />
                            </VerticalStackLayout>
                        </Border>
                    </DataTemplate>
                </CollectionView.GroupHeaderTemplate>

                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:VoiceNote">
                        <Border BackgroundColor="White" Padding="12" Margin="0,0,0,8" Stroke="#EEEEEE" StrokeThickness="1" >
                            <VerticalStackLayout>
                                <Label Text="{Binding Title}" FontAttributes="Bold" />
                                <Label Text="{Binding DurationDisplay, StringFormat='Длительность: {0}'}" FontSize="12" />
                                <Label Text="{Binding RecognitionStatusDisplay, StringFormat='Статус: {0}'}" FontSize="12" />
                                <Label Text="{Binding AudioFilePath, StringFormat='Audio: {0}'}" FontSize="10" />
                                <Button Text="▶ Воспроизвести"
                                        Command="{Binding Path=BindingContext.PlayAudioCommand, Source={x:Reference OverviewPage}}"
                                        CommandParameter="{Binding .}"
                                        BackgroundColor="Green"
                                        TextColor="White"
                                        Margin="0,5,0,0" />
                            </VerticalStackLayout>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <Button Text="+"
                    WidthRequest="56"
                    HeightRequest="56"
                    CornerRadius="28"
                    BackgroundColor="#5B3CC4"
                    TextColor="White"
                    FontSize="24"
                    FontAttributes="Bold"
                    HorizontalOptions="End"
                    VerticalOptions="End"
                    Margin="0,0,12,12"
                    Command="{Binding AddVoiceNoteCommand}"
                    SemanticProperties.Description="Добавить голосовую заметку" />
        </Grid>
    </Grid>
</ContentPage>
