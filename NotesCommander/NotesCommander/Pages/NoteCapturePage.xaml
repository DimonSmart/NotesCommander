<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:pageModels="clr-namespace:NotesCommander.PageModels"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="NotesCommander.Pages.NoteCapturePage"
             x:DataType="pageModels:MainPageModel"
             Title="Новая заметка">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Закрыть" Clicked="CloseClicked" />
    </ContentPage.ToolbarItems>

    <ContentPage.Resources>
        <ResourceDictionary>
            <toolkit:InvertedBoolConverter x:Key="InvertedBoolConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout Padding="20"
                             Spacing="16">

            <Border Style="{StaticResource CardStyle}">
                <VerticalStackLayout Spacing="8">
                    <Label Text="{Binding RecordingStatusText}" />
                    <Label Text="{Binding RecordingDurationDisplay, StringFormat='Длительность: {0}'}" />
                    <Button Text="{Binding RecordingButtonText}"
                            Command="{Binding ToggleRecordingCommand}" />
                </VerticalStackLayout>
            </Border>

            <Entry Placeholder="Название заметки"
                   Text="{Binding DraftTitle}" />
            <Entry Placeholder="Категория"
                   Text="{Binding DraftCategoryLabel}" />

            <Grid ColumnDefinitions="*,*"
                  ColumnSpacing="12">
                <Button Text="Выбрать фото"
                        Command="{Binding PickPhotoCommand}" />
                <Button Grid.Column="1"
                        Text="Сделать фото"
                        Command="{Binding CapturePhotoCommand}" />
            </Grid>

            <VerticalStackLayout Spacing="8"
                                 IsVisible="{Binding HasDraftPhotos}">
                <Label Text="Вы добавили фотографии"
                       FontAttributes="Bold" />
                <ScrollView Orientation="Horizontal">
                    <HorizontalStackLayout Spacing="12"
                                           BindableLayout.ItemsSource="{Binding DraftPhotoPaths}">
                        <BindableLayout.ItemTemplate>
                            <DataTemplate>
                                <Border WidthRequest="96"
                                        HeightRequest="96">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="18" />
                                    </Border.StrokeShape>
                                    <Image Source="{Binding .}"
                                           Aspect="AspectFill" />
                                </Border>
                            </DataTemplate>
                        </BindableLayout.ItemTemplate>
                    </HorizontalStackLayout>
                </ScrollView>
            </VerticalStackLayout>

            <Button Text="Сохранить голосовую заметку"
                    HeightRequest="48"
                    Command="{Binding SaveMetadataCommand}" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
